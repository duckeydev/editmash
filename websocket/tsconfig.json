{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"types": ["bun-types"],
		"paths": {
			"@/*": ["../*"]
		}
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules"]
}
